{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "client/src/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@components/*": ["client/src/components/*"]
    },
    "strict": true,
    "types": [
      "@cloudflare/workers-types"
    ]
  },
  "include": [
    "client",
    "functions",
    "shared"
  ]
}
